function nvr_open() {
    if [ -z "$NVIM" ]; then
      echo "No NVIM server found. Are you running inside Neovim?"
      exit 1
    fi

    nvr --servername "$NVIM" --remote "$@"
}

# JQ
function j2q() {
  echo "$1" | jq -r 'to_entries | map("\(.key)=\(.value|@uri)") | join("&")'
}

function q2j() {
  echo "$1" | awk -F '[=&]' '{
       printf "{";
       for (i=1; i<=NF; i+=2) {
         if (i>1) printf ",";
         printf "\"%s\":\"%s\"", $i, $(i+1);
       }
       printf "}\n";
     }' | sed 's/+/ /g' | jq .
}

